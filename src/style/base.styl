@font-face
  font-family Alimama
  src url('../assets/fonts/alimamashuheiti.ttf')

@font-face
  font-family DigitNumber
  src url('../assets/fonts/digit_number.ttf')

html, body
  margin 0
  padding 0
  height 100%
  width 100%

body
  font-size .14rem

div
  box-sizing border-box

ul
  margin 0
  padding 0
  list-style none

#app
  position relative
  height 100%
  width 100%
  overflow hidden

  .page
    position relative
    height calc(100% - 0.8rem)
    width 100%
