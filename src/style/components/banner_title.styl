$bg-color = radial-gradient(circle, #a7baee, #7b99f8, #5175fd, #284dfc, #0b0bf4)
$text-color = #fff

.banner-wrapper
  display flex
  align-items center
  height 0.4rem
  width 100%
  overflow hidden
  padding-left 0.05rem
  background-image $bg-color

  .banner-title
    width 100%
    height 100%
    line-height 0.4rem
    font-size .16rem
    font-weight bold
    padding-left 0.15rem
    letter-spacing: 0.01rem
    color $text-color
