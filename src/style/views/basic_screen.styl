$bg-color = rgba(0,0,0,0.2)
$other-height = 32.5%
// 底部距离上边的距离
$bottom-top-distance = calc(65% + 0.1rem)
// 底部高度
$bottom-heigt = calc(35% - 0.15rem)
// 底部宽度
$bottom-width = 33.2%

@keyframes blob-bounce {
  0% {
    transform: translate(-100%, -100%) translate3d(0, 0, 0);
  }

  25% {
    transform: translate(-100%, -100%) translate3d(100%, 0, 0);
  }

  50% {
    transform: translate(-100%, -100%) translate3d(100%, 100%, 0);
  }

  75% {
    transform: translate(-100%, -100%) translate3d(0, 100%, 0);
  }

  100% {
    transform: translate(-100%, -100%) translate3d(0, 0, 0);
  }
}

.page

  // 左侧
  .left-top-wrapper
    position absolute
    width 24.5%
    height $other-height

  .left-middle-wrapper
    position absolute
    width 24.5%
    height $other-height
    top calc(32.5% + 0.05rem)

  // 正中央
  .middle-wrapper
    position absolute
    top 0
    left 24.7%
    height calc(65% + 0.05rem)
    width 50.6%
    z-index 1

    .map-content
      position absolute
      top 0.05rem
      left 0.05rem
      bottom 0.05rem
      right 0.05rem
      z-index 2

      #map
        height 100%
        width 100%

  // 右侧
  .right-top-wrapper
    position absolute
    width 24.5%
    height $other-height
    top 0
    right 0

  .right-middle-wrapper
    position absolute
    width 24.5%
    height $other-height
    top calc(32.5% + 0.05rem)
    right 0

  .bottom-left-wrapper
    position absolute
    top $bottom-top-distance
    left 0
    height $bottom-heigt
    width $bottom-width

  .bottom-middle-wrapper
    position absolute
    top $bottom-top-distance
    left 33.4%
    height $bottom-heigt
    width $bottom-width

    img
      // width 100%
      height 100%

  .bottom-right-wrapper
    position absolute
    top $bottom-top-distance
    right 0
    height $bottom-heigt
    width $bottom-width

    .include-title-table-area-content
      padding .04rem .02rem
      height calc(100% - 0.36rem)
      width 100%
      overflow hidden

// 含标题的内容区
.include-title-area-content
  height calc(100% - 0.36rem)
  width 100%
  overflow hidden
