$right-item-height = calc((100% - 0.2rem) / 3)
$right-left = calc(75.5% + 0.1rem)
.page
  .left-area
    position absolute
    top 0.05rem
    left 0.05rem
    bottom 0.05rem
    width 75.5%
    background rgba(225, 225, 222,0.4)
    backdrop-filter blur(0.56rem)

  .right-top-area
    position absolute
    top 0.05rem
    right 0.05rem
    left $right-left
    height $right-item-height
    background rgba(225, 225, 222,0.4)

  .right-middle-area
    position absolute
    top calc((100% - 0.2rem) / 3 + 0.1rem)
    left $right-left
    right 0.05rem
    height $right-item-height
    background rgba(225,225,222,.4)

  .right-bottom-area
    position absolute
    right 0.05rem
    bottom 0.05rem
    left $right-left
    height $right-item-height
    background rgba(225,225,222,0.4)


