$right-item-height = calc((100% - 0.2rem) / 3)
$right-left = calc(75.5% + 0.1rem)
$background-image = url('../../assets/image/content-bg.png')

.page
  .left-area
    position absolute
    top 0.05rem
    left 0.05rem
    bottom 0.05rem
    width 75.5%
    background $background-image
    background-size 100% 100%
    background-repeat no-repeat

  .right-top-area
    position absolute
    top 0.05rem
    right 0.05rem
    left $right-left
    height $right-item-height
    background $background-image no-repeat 100% 100%

  .right-middle-area
    position absolute
    top calc((100% - 0.2rem) / 3 + 0.1rem)
    left $right-left
    right 0.05rem
    height $right-item-height
    background $background-image
    background-size 100% 100%
    background-repeat no-repeat

  .right-bottom-area
    position absolute
    right 0.05rem
    bottom 0.05rem
    left $right-left
    height $right-item-height
    background $background-image
    background-size 100% 100%
    background-repeat no-repeat


